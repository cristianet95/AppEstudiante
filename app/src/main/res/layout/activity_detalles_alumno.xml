<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalles_alumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristian.appestudiante.vista.DetallesAlumno"
    android:orientation="vertical">

    <include android:id="@+id/toolbarinfoalumno" layout="@layout/tool_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/info"
                    android:id="@+id/imageView7"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />

                <TextView
                    android:text="Datos Personales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    android:textSize="20sp"
                    android:padding="10dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="DNI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editDniInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce dni"
                    android:maxLength="9"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editNombreInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce nombre" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="1º Apellido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editApe1InfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce 1º apellido" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="2º Apellido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editApe2InfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce 2º apellido" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Edad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:id="@+id/editEdadInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce edad"
                    android:maxLength="3"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/casa"
                    android:id="@+id/imageView8"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />

                <TextView
                    android:text="Ubicación"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    android:textSize="20sp"
                    android:padding="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Domicilio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editDomicilioInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce domicilio" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Localidad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editLocalidadInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce localidad" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="C.P."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:id="@+id/editCodigoPostalInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce C.P."
                    android:maxLength="5"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/contacto"
                    android:id="@+id/imageView9"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />

                <TextView
                    android:text="Contacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    android:textSize="20sp"
                    android:padding="10dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Telefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:id="@+id/editTelefonoInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce telefono"
                    android:maxLength="9"
                    android:inputType="number" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Movil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:id="@+id/editMovilInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce movil"
                    android:maxLength="9"
                    android:inputType="number" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrincipalEdit" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="E-mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorPrincipalEdit"
                    android:textColor="@android:color/background_light" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/editEmailInfoAlumno"
                    android:layout_weight="1"
                    android:textColor="@color/colorGris"
                    style="@style/estiloEditModificar"
                    android:hint="Introduce e-mail" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
