<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_anadir_profesor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristian.appestudiante.vista.AnadirProfesor"
    android:orientation="vertical">

    <include android:id="@+id/toolbarinsertprofesor" layout="@layout/tool_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/personal"
            android:id="@+id/imageView5"
            android:scaleType="fitCenter"
            android:layout_weight="3" />

        <TextView
            android:text="Datos Profesor"
            android:layout_width="match_parent"
            android:id="@+id/textView5"
            android:layout_weight="1"
            style="@style/tituloInicios" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecundarioEdit"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="DNI"
            android:id="@+id/textView9"
            style="@style/textViewMenu"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/editDniProfesor"
            android:layout_weight="1"
            android:maxLength="9"
            style="@style/estiloEditFormulario" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Nombre"
            android:id="@+id/textView6"
            style="@style/textViewMenu"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/editNombreProfesor"
            android:layout_weight="1"
            style="@style/estiloEditFormulario" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="1º Apellido"
            android:id="@+id/textView7"
            style="@style/textViewMenu"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/editApellido1Profesor"
            android:layout_weight="1"
            style="@style/estiloEditFormulario" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="2º Apellido"
            android:id="@+id/textView8"
            style="@style/textViewMenu"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/editApellido2Profesor"
            android:layout_weight="1"
            style="@style/estiloEditFormulario" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Email"
            android:id="@+id/textView10"
            style="@style/textViewMenu"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/editEmailProfesor"
            android:layout_weight="1"
            style="@style/estiloEditFormulario" />
    </LinearLayout>

    <Button
        android:text="Añadir Profesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAnadirProfesor"
        android:onClick="insertarProfesor"/>
