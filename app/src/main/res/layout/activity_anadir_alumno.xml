<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/apptoolbar" layout="@layout/tool_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/personal"
            android:id="@+id/imageView5"
            android:scaleType="fitCenter"
            android:layout_weight="3" />

        <TextView
            android:text="Datos Alumno"
            android:layout_width="match_parent"
            android:id="@+id/textView5"
            android:layout_weight="1"
            style="@style/tituloInicios" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecundarioEdit"
        android:layout_marginTop="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="DNI"
                    android:id="@+id/textView9"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editDniAlumno"
                    android:layout_weight="1"
                    android:maxLength="9"
                    style="@style/estiloEditFormulario" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Nombre"
                    android:id="@+id/textView6"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editNombreAlumno"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="1ยบ Apellido"
                    android:id="@+id/textView7"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editApellido1Alumno"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="2ยบ Apellido"
                    android:id="@+id/textView8"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editApellido2Alumno"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Domicilio"
                    android:id="@+id/textView10"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editDomicilio"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Localidad"
                    android:id="@+id/textView11"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editLocalidad"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="C.P."
                    android:id="@+id/textView12"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/editCodigoPostal"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario"
                    android:maxLength="5"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Nacionalidad"
                    android:id="@+id/textView13"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="20"
                    android:id="@+id/editNacionalidad"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Fecha Nacimiento"
                    android:id="@+id/textView14"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2.5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textFechaNac"
                    android:layout_weight="2"
                    style="@style/estiloEditFormulario"
                    android:textSize="18sp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/calendar"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnDatePicker"
                    android:onClick="showDatePickerDialog"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Edad"
                    android:id="@+id/textView15"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/editEdad"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario"
                    android:inputType="number"
                    android:maxLength="3"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Telefono"
                    android:id="@+id/textView16"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/editTelefono"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario"
                    android:inputType="number"
                    android:maxLength="9"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Movil"
                    android:id="@+id/textView17"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/editMovil"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario"
                    android:inputType="number"
                    android:maxLength="9"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="E-mail"
                    android:id="@+id/textView18"
                    style="@style/textViewMenu"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/editEmail"
                    android:layout_weight="1"
                    style="@style/estiloEditFormulario"
                    android:inputType="text" />
            </LinearLayout>

            <Button
                android:text="Insertar Alumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnInsertarAlumno"
                android:onClick="insertarAlumno"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>