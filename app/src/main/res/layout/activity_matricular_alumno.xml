<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_matricular_alumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristian.appestudiante.vista.MatricularAlumno"
    android:orientation="vertical">

    <include android:id="@+id/apptoolbar" layout="@layout/tool_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/estudiante"
            android:id="@+id/imageView4"
            android:layout_weight="3" />

        <TextView
            android:text="Alumno"
            android:id="@+id/textView22"
            android:layout_weight="1"
            style="@style/textViewMenu"
            android:padding="10dp"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGris"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="DNI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:background="@color/colorGris"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlanco"
                android:padding="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtDniMatricula"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorPrincipalEdit"
                android:gravity="center" />

            <TextView
                android:text="Nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:background="@color/colorGris"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlanco"
                android:padding="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtNombreAlumnoMatricula"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorPrincipalEdit"
                android:gravity="center" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGris"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="1ยบ Apellido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:background="@color/colorGris"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlanco"
                android:padding="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt1ApellidoMatricula"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorPrincipalEdit"
                android:gravity="center"
                android:text="" />

            <TextView
                android:text="2ยบ Apellido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:background="@color/colorGris"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlanco"
                android:padding="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt2ApellidoMatricula"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorPrincipalEdit"
                android:gravity="center" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGris"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Elegir Alumno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView24"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="right|center_vertical" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_selected_box"
                android:id="@+id/btnElegirAlumno"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGris"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:srcCompat="@drawable/inscripcioncurso" />

        <TextView
            android:id="@+id/textView23"
            style="@style/textViewMenu"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Curso"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:background="@color/colorGris"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlanco"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtNombreCursoMatricula"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipalEdit"
            android:gravity="center" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGris" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:text="Elegir Curso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView25"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="right|center_vertical" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_selected_box"
            android:id="@+id/btnElegirCurso"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <Button
        android:text="Matricular Alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMatricularse"
        style="@style/estiloBotonLogin" />
</LinearLayout>
