<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cristian.appestudiante">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/book"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".vista.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".vista.InicioAdministrativo" />
        <activity android:name=".vista.AnadirAlumno" />
        <activity android:name=".vista.AnadirProfesor" />
        <activity android:name=".vista.ListaAlumnos" />
        <activity android:name=".vista.DetallesAlumno" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".vista.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".vista.MatricularAlumno" />
        <activity android:name=".vista.ListaProfesor" />
        <activity android:name=".vista.DetallesProfesor" />
        <activity android:name=".vista.ImpartirActivity"></activity>
    </application>

</manifest>